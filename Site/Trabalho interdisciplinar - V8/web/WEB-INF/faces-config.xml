<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <managed-bean>
        <managed-bean-name>Usuario</managed-bean-name>
        <!--<managed-bean-extension>Administrador</managed-bean-extension>-->
        <managed-bean-class>modelo.Usuario</managed-bean-class>
    
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
        <managed-bean-name>Lixeira</managed-bean-name>
        <managed-bean-class>modelo.Lixeira</managed-bean-class>
        <managed-bean-scope>Session Scope</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>TipoDeLixo</managed-bean-name>
        <managed-bean-class>modelo.TipoDeLixo</managed-bean-class>
        <managed-bean-scope>Session Scope</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>Instituto</managed-bean-name>
        <managed-bean-class>modelo.Instituto</managed-bean-class>
        <managed-bean-scope>Session Scope</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>Mudanca</managed-bean-name>
        <managed-bean-class>modelo.Mudanca</managed-bean-class>
        <managed-bean-scope>Session Scope</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>Feedback</managed-bean-name>
        <managed-bean-class>modelo.Feedback</managed-bean-class>
        <managed-bean-scope>Session Scope</managed-bean-scope>
    </managed-bean>
<!--     <managed-bean>
        <managed-bean-name>Administrador</managed-bean-name>
        <managed-bean-class>Interdisciplinar.web.Administrador</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>-->
    <navigation-rule>

        <from-view-id>*</from-view-id>

        <navigation-case>

            <from-outcome>inicio</from-outcome>

            <to-view-id>faces/index.xhtml</to-view-id>

        </navigation-case>

        <navigation-case>

            <from-outcome>cadastro</from-outcome>

            <to-view-id>faces/cadastro.xhtml</to-view-id>

        </navigation-case>
        
        <navigation-case>

            <!--<from-view-id>faces/index.xhtml</from-view-id>-->
            <from-outcome>login</from-outcome>

            <to-view-id>/login.xhtml</to-view-id>
            
        </navigation-case>
        

    </navigation-rule>

    <navigation-rule>

        <from-view-id>/cadastro.xhtml</from-view-id>

        <navigation-case>

            <from-outcome>sucesso</from-outcome>

            <to-view-id>/aluno_index.xhtml</to-view-id>

        </navigation-case>

    </navigation-rule>
    
    <navigation-rule>

        <from-view-id>/login.xhtml</from-view-id>

        <navigation-case>

            <from-outcome>administrador</from-outcome>
            <to-view-id>/administrador_index.xhtml</to-view-id>

        </navigation-case>
        
                <navigation-case>

            <from-outcome>usuario</from-outcome>
            <to-view-id>/aluno_index.xhtml</to-view-id>

        </navigation-case>

    </navigation-rule>
</faces-config>
